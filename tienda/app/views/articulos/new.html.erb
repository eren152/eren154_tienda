<h1>New articulo</h1>

<% form_for @articulo,:html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </p>
  <p>
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </p>
  <p>
    <%= f.label :cantidad %><br />
    <%= f.text_field :cantidad %>
  </p>
  <p>
    <%= f.file_field :photo%>
  </p> 
  <p>
    <%= f.file_field :photo1%>
  </p>
  <p>
    <%= f.file_field :photo2%>
  </p>
  <p>
    <%= f.file_field :photo3%>
  </p>
  <p>
    <%= f.file_field :photo4%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articulos_path %>